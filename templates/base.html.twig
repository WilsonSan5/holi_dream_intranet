<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>


		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-body-primary">
			<div class="container-fluid">
				{% if is_granted('ROLE_ADMIN') %}
					<a class="navbar-brand" href="{{path('app_home')}}">Holi Dream Intranet (Admin)</a>
				{% else %}
					<a class="navbar-brand" href="{{path('app_home')}}">Holi Dream Intranet(Employé)</a>
				{% endif %}

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>


				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						{% if is_granted('ROLE_ADMIN') %}
							{# <li class="nav-item"><a class="nav-link" href="{{path('app_achat_index')}}">Achats</a></li> #}
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_emp_index')}}">Employés</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_user_index')}}">Utilisateurs</a>
							</li>
						{% endif %}
						{% if is_granted('ROLE_EMP') %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_planning_index')}}">Plannings</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_produit_index')}}">Produits</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_user_index')}}">Vos utilisateurs</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_compte_emp')}}">Mon espace</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_logout')}}">Déconnexion</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_login')}}">Connexion</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</body>
	</body>
</html></body></html></nav><div class='container'> {% block body %}{% endblock %}</div></body></body></html></body></html>
