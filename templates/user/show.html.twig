{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
<h1>{{user.nom}}
	{{user.prenom}}</h1>

<table class="table">
	<tbody>
		<tr>
			<th>Id</th>
			<td>{{ user.id }}</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>{{ user.email }}</td>
		</tr>
		<tr>
			<th>Roles</th>
			<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
		</tr>
		<tr>
			<th>Password</th>
			<td>{{ user.password }}</td>
		</tr>
		<tr>
			<th>Nom</th>
			<td>{{ user.nom }}</td>
		</tr>
		<tr>
			<th>Prénom</th>
			<td>{{ user.prenom }}</td>
		</tr>
	</tbody>
</table>
<a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
{{ include('user/_delete_form.html.twig') }}

{% if role == 'ROLE_EMP' %}
	<h2>Utilisateurs</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Nom</th>
				<th>Prénom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in all_related_users %}
				<tr>
					<td>{{user.id}}</td>
					<td>{{user.email}}</td>
					<td>{{user.nom}}</td>
					<td>{{user.prenom}}</td>
					<td>
						<a href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% else %}
	<h2>Achats</h2>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Utilisateur</th>
				<th>Produit</th>
				<th>Date de départ</th>
				<th>Date de fin</th>
				<th>Prix</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for achat in achats %}
				<tr>
					<td>{{ achat.id }}</td>
					<td>{{ achat.user }}</td>
					<td>{{ achat.produit }}</td>
					<td>{{ achat.planning.DateDepart|date('d-m-Y')}}</td>
					<td>{{ achat.planning.DateFin|date('d-m-Y')}}</td>
					<td>{{ achat.prix }}</td>
					<td>
						<a href="{{ path('app_achat_show', {'id': achat.id}) }}">show</a>
						<a href="{{ path('app_achat_edit', {'id': achat.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun achat</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endif %}

{% endblock %}