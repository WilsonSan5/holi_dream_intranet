{% extends 'base.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block body %}
	<h1>Gestion des produits</h1>
	<a href="{{ path('app_produit_new') }}">Create new</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Pays</th>
				<th>Prix Defaut</th>
				<th>Catégories</th>
				<th>actions</th>

			</tr>
		</thead>
		<tbody>
			{% for produit in produits|reverse %}
				<tr>
					<td>{{ produit.id }}</td>
					<td>{{ produit.title }}</td>
					<td>{{ produit.prixDefaut }} €</td>
					<td>
					{% for categorie in produit.categorie %}
					<a href='{{path('app_categorie_show', {id : categorie.id })}}'>{{categorie.nom}}</a> {% endfor %}</td>
					
					<td>
						<a href="{{ path('app_produit_show', {'id': produit.id}) }}">Voir</a>
						<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Aucun produit trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
