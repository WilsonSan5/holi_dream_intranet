{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}

<h1> {{produit.title}} </h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ produit.id }}</td>
			</tr>
			<tr>
				<th>Introduction</th>
				<td>{{ produit.introduction }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ produit.description }}</td>
			</tr>
			<tr>
				<th>PrixDefaut</th>
				<td>{{ produit.prixDefaut }} €</td>
			</tr>
			<tr>
				<th>NbrJour</th>
				<td>{{ produit.nbrJour }}</td>
			</tr>
			<tr>
				<th>NbrNuit</th>
				<td>{{ produit.nbrNuit }}</td>
			</tr>
			<tr>
				<th>DescriptionProgramme</th>
				<td>{{ produit.descriptionProgramme }}</td>
			</tr>
		</tbody>
	</table>

	<h2>Plannings associés</h2>

	<a href="{{ path('app_planning_new',{id:produit.id}) }}">Créer un nouveau planning</a>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Produit</th>
				<th>Date de départ</th>
				<th>Date de fin</th>
				<th>Prix</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for planning in plannings|reverse %}
				<tr>
					<td>{{ planning.id }}</td>
					<td>{{ planning.produit }}</td>
					<td>{{ planning.DateDepart ? planning.DateDepart|date('d-m-Y')}}</td>
					<td>{{ planning.DateFin ? planning.DateFin|date('d-m-Y') }}</td>
					<td>{{ planning.prix }}</td>
					<td>
						<a href="{{ path('app_planning_show', {'id': planning.id}) }}">show</a>
						<a href="{{ path('app_planning_edit', {'id': planning.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun planning associé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


	<a href="{{ path('app_produit_index') }}">back to list</a>

	<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>

	{{ include('produit/_delete_form.html.twig') }}
{% endblock %}
